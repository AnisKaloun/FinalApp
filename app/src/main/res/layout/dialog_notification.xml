<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="74dp"
            android:layout_height="73dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/pdf"
            android:padding="10dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/titre"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/auteur"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/motcle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <RatingBar
                android:id="@+id/etoiles"
                android:layout_width="244dp"
                android:layout_height="42dp"


                android:backgroundTint="#ffff00"
                android:numStars="6"
                android:scaleX=".5"
                android:scaleY=".5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/lirePDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:textColor="#fff"
            android:text="@string/lire"
            android:textSize="7sp" />


        <Button
            android:id="@+id/telechargerPDF"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:textColor="#fff"
            android:text="@string/telecharger"
            android:textSize="7sp" />

        <Button
            android:id="@+id/partagerPDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:textColor="#fff"
            android:text="@string/partager"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/nbrEtoiles"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:text="2.5"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/noter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#ffff00"
            android:numStars="1"
            android:rating="1"
            android:scaleX="0.6"
            android:scaleY="0.6" />

    </LinearLayout>



</LinearLayout>




